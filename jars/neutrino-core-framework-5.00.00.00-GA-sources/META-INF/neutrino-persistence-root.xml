<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
    version="2.0">

    <persistence-unit name="neutrino-persistence">
        
        <!-- Base persistence unit xml. All persistence unit in other modules should start with name 'neutrino-persistence' 
        (current PU's name attribute) for merging to take place correctly. -->
        
        <!-- Define all common configuration for all persistence units here. -->
        
        <shared-cache-mode>ENABLE_SELECTIVE</shared-cache-mode>
        
    </persistence-unit>
</persistence>
